<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/forth"
    android:layout_height="match_parent"
    tools:context="com.example.acer.vale_app.Main4Activity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tvstyle"
        android:id="@+id/ll2"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#fff"
            android:id="@+id/ib2"
            android:src="@drawable/route1"
            />



        <TextView
            android:id="@+id/tvroute2"
            android:text="EN ROUTE"
            android:paddingLeft="15dp"
            android:paddingTop="6dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#ea8d32"
            />

    </LinearLayout>



    <Button
        android:text="Reached Destination"
        android:textColor="#fff"
        android:textSize="25dp"
        android:id="@+id/btndest"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/btnstyle2"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll2"
        android:id="@+id/fragment"
        android:layout_above="@+id/btndest"
        ></FrameLayout>

</RelativeLayout>
